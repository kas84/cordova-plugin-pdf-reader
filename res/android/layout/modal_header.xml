<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/header_height"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:baselineAligned="true"
        android:background="@color/header_orange">

        <Button
            style="@style/headerBackButtonStyle"
            android:id="@+id/faBackButton"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button" />

        <TextView
            android:id="@+id/WebViewHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            style="@style/headerBackButtonStyle"
            android:id="@+id/btn_share"
            android:layout_width="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_share_white_24dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
